/* pages/scheduling/shiftList/shiftList.wxss *//** 固定班次 临时班次 **/
.add-scheduling-scroll{
    height: 600rpx;
  }
  .add-scheduling-main {
      padding: 48rpx;
  }
  .add-scheduling-main .add-scheduling-head {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 36rpx;
  }
  .add-scheduling-main .add-scheduling-head .add-scheduling-head-title {
    display: block;
      font-size: 32rpx;
      font-weight: bold;
      color: #404040;
    text-align: center ;
    flex: 1;
  }
  .add-scheduling-main .add-scheduling-tab {
      display: flex;
      align-items: center;
      justify-content: space-between;
    padding-bottom: 24rpx;
      margin-bottom: 36rpx;
    border-bottom: 1px solid #e8e8e8;
  }
  .add-scheduling-main .add-scheduling-tab .add-scheduling-tab-item {
      font-size: 28rpx;
      color: #706b6b;
      padding: 12rpx 24rpx;
      border-radius: 10rpx;
  }
  .add-scheduling-main .add-scheduling-tab .add-scheduling-tab-item-active {
      background-color: #FFA928;
      color: #fff;
  }
  .add-scheduling-main .add-scheduling-list {
  }
  .add-scheduling-main .add-scheduling-list .add-scheduling-list-item {
      margin-bottom: 24rpx;
      padding: 24rpx;
      border: 1rpx solid #e8e8e8;
      border-radius: 10rpx;
  }
  .add-scheduling-main .add-scheduling-list .add-scheduling-list-item .add-scheduling-list-item-title {
      font-size: 28rpx;
      color: #404040;
      margin-bottom: 12rpx;
  }
  .add-scheduling-main .add-scheduling-list .add-scheduling-list-item .add-scheduling-list-item-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
  }
  .add-scheduling-main .add-scheduling-list .add-scheduling-list-item .add-scheduling-list-item-content .add-scheduling-list-item-select {
      width: 36rpx;
      height: 36rpx;
      border-radius: 50%;
      border: 1rpx solid #e8e8e8;
    flex-shrink: 0;
  }
  .add-scheduling-main .add-scheduling-list .add-scheduling-list-item .add-scheduling-list-item-content .schedule-selected {
      border: 1rpx solid #FFA928;
  }
  .add-scheduling-main .add-scheduling-list .add-scheduling-list-item .add-scheduling-list-item-content .schedule-selected::after {
    content: '';
    display: block;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: #FFA928;
    margin: 8rpx auto;
  }
  .add-scheduling-main .add-scheduling-list .add-scheduling-list-item .add-scheduling-list-item-content .add-scheduling-list-item-content-left {
      display: flex;
      align-items: center;
    justify-content: flex-start;
    flex: 1;
    margin-left: 24rpx;
  }
  .add-scheduling-main .add-scheduling-list .add-scheduling-list-item .add-scheduling-list-item-content .add-scheduling-list-item-content-right {
    flex-shrink: 0;
  }
  /** 临时班次 **/
      .add-temporaryscheduling-list {
  }
  
  .temporary-scheduling-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 36rpx;
  }
  .temporary-scheduling-head-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #404040;
    text-align: left;
    flex: 1;
  }
  .temporary-scheduling-item-btn-delete{
    font-size: 26rpx;
    color: #FFA928;
  }
  .temporary-scheduling-time{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 36rpx;
  
  }
  .temporary-scheduling-item{
    background-color: #f6f6f6;
    padding: 24rpx;
    border-radius: 10rpx;
    margin-bottom: 24rpx;
  }
  
  
  
  .add-scheduling-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 40rpx;
  }
  .temporary-scheduling-item-btn{
    margin-left: 24rpx;
    color: #FFA928;
    font-size: 28rpx;
  }
  .add-temporaryscheduling-btn{
    margin-top: 32rpx;
  }
  
  .add-temporaryscheduling-btn-item{
    color: #FFA928;
    font-size: 28rpx;
  }
  
  .add-scheduling-btn .add-scheduling-btn-item {
    display: block;
    width: 180rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    background-color: #FFA928;
    border-radius: 40rpx;
  }
  .add-scheduling-btn .add-cancel-btn {
    margin-right: 42rpx;
    border: 1px solid #FFA928;
    background-color: #fff;
    color: #FFA928;
  }