/**第二的倍数 个.table-body-item**/
.list-item .table-body-item:nth-child(2n){
  background-color: #f8f8f8;
}
.list-item .body-item-child{
  width: 90%;
  height: 95%;
  border-radius: 6rpx;
}
.grid-selected{
  position: relative;
  border: 2px solid #FFA928;
  border-radius: 10rpx;
}
/**写一个伪类元素，做成直角三角形在右下角，标识为选中*/
.grid-selected::after{
  content: '';
  display: block;
  width: 0;
  height: 0;
  border-left: 6px solid transparent;
  border-top: 6px solid transparent;
  border-right: 6px solid #FFA928;
  border-bottom: 6px solid #FFA928;
  position: absolute;
  right: 0;
  bottom: 0;
}
/**写一个伪类元素before，做成小对号，放到after里面，标识为选中*/
.grid-selected image{
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  bottom: 1rpx;
  right: 1rpx;
  display: block;
  z-index: 99;
  /** 旋转45度 */
  transform: rotate(-10deg);
}



