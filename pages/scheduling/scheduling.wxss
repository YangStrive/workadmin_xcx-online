/* pages/scheduling/scheduling.wxss */
.scheduling{
  width: 100vw;
  height: 100vh;
}
.head-nav{
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.project-name{
  font-size: 36rpx;
  color: #404040;
  margin: 20rpx 0;
  font-weight: bold;

}
.table-head{
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e8e8e8;
  border-top: 1px solid #e8e8e8;
  height: 120rpx;
  width: 100vw;
}
.table-head-item{
  padding: 20rpx 0;
  border-right: 1rpx solid #e8e8e8;
  flex-shrink: 0;
  flex: 1;

}
.table-head-first{
  width: 90rpx;
  display: block;
  flex-shrink: 0;
}
.table-head-year{
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}
.table-head-week{
  display: block;
  font-size: 24rpx;
  color: #706b6b;
  text-align: center;
}
.table-head-day{
  display: block;
  font-size: 30rpx;
  color: #FFA928;
  text-align: center;
  font-weight: bold;
}
.table-head-day text{
  font-size: 26rpx;
  color: #FFA928;
  display: block;
  text-align: center;
}
.table-head-day .taday{
  color: #FFA928;
  font-size: 24rpx;
  display: inline;
  margin-left: 6rpx;
  position: relative;
  top: -2rpx;
}


/* body  #404040*/



.list-item{
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e8e8e8;
  width: 100vw;
}
.list-item .table-body-item:first-child{
  width: 90rpx;
  display: block;
  flex-shrink: 0;
}

.list-item .table-body-item{
  border-right: 1rpx solid #e8e8e8;
  padding: 20rpx 0;
  flex-shrink: 0;
  flex: 1;
}

/* scroll */
.scroll-body{
  height: calc(100vh - 354rpx);
}
.table-body-item .time-stage{
  display: block;
  font-size: 20rpx;
  text-align: center;
}
.item-surname{
  display: block;
  font-size: 32rpx;
  width: 40px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 50%;
  background-color: #e5d312;
  color: #fff;
  margin: 0 auto;
}
.item-name{
  display: block;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  margin-top: 6rpx;
}

/* footer */
.footer-box{
  height: 130rpx;
  background-color: aliceblue;
  font-size: 26rpx;
  color: #706b6b;
}

.footer-contetn{
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer-nav{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
}
.footer-nav-item{
  padding: 0 20rpx;
}