  line-height: 40px;
  text-align: center;
  border-radius: 50%;
  background-color: #e5d312;
  color: #fff;
  margin: 0 auto;
}
.item-name{
  display: block;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  margin-top: 6rpx;
}
.swiper-table-body{
  flex-grow: 1;
  height: 100%;
  width: calc(100vw - 90rpx);
}

.table-body-user .table-body-item{
  padding: 20rpx 0;
