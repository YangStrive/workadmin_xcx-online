  display: block;
  flex-shrink: 0;
  padding: 20rpx 0;
  border-right: 1rpx solid #e8e8e8;
}
.table-head-year{
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}
.table-head-week{
  display: block;
  font-size: 24rpx;
  color: #706b6b;
  text-align: center;
}
.table-head-day{
  display: block;
  font-size: 30rpx;
  color: #FFA928;
  text-align: center;
  font-weight: bold;
}
.table-head-day text{
  font-size: 26rpx;
  color: #FFA928;
  display: block;
  text-align: center;
}
.table-head-day .taday{
  color: #FFA928;
  font-size: 24rpx;
  display: inline;
  margin-left: 6rpx;
  position: relative;
  top: -2rpx;
}
.month-tag{
  position: absolute;
  top: -8rpx;
  left: 1px;
  display: block;
  font-size: 24rpx;
  color: #404040;
  text-align: center;
  margin-top: 6rpx;
}

/* body  #404040*/



.list-item{
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e8e8e8;
  width: 100%;
}

.list-item .table-body-item{
  border-right: 1rpx solid #e8e8e8;
  flex-shrink: 0;
  flex: 1;
  height: 170rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.list-item .body-item-child{
  width: 90%;
  height: 95%;
  
}
.grid-selected{
  position: relative;
  border: 1px solid #FFA928;
  border-radius: 10rpx;
}
/**写一个伪类元素，做成直角三角形在右下角，标识为选中*/
.grid-selected::after{
  content: '';
  display: block;
  width: 0;
  height: 0;
  border-left: 6px solid transparent;
  border-top: 6px solid transparent;
  border-right: 6px solid #FFA928;
  border-bottom: 6px solid #FFA928;
  position: absolute;
  right: 0;
  bottom: 0;
}


/* scroll */
.scroll-body{
  height: calc(100vh - 354rpx);
}
.scroll-main{

  display: flex;
  align-items: stretch;
  justify-content: flex-start;
}
.table-body-item .time-stage{
  display: block;
  font-size: 20rpx;
  text-align: center;
}
.item-surname{
  display: block;
  font-size: 32rpx;
  width: 40px;
