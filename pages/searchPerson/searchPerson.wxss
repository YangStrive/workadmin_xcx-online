/* pages/searchPerson/searchPerson.wxss */
.search-header{
    padding: 24rpx;
    background-color: #fff;

}
.search-header .search{
    background-color: #f1f1f1;
    padding: 12rpx;
    box-shadow: 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: flex-start;
    border-radius: 8rpx;

}
.search__icon{
    width: 40rpx;
    height: 40rpx;
}
.search__input{
    flex: 1;
    height: 40rpx;
    line-height: 40rpx;
    align-items: center;
    padding: 0 24rpx;
    font-size: 28rpx;
}

.serach-list{
    background-color: #f8f8fa;
}
.item-list-item{
    padding: 24rpx;
    background-color: #fff;
    margin-bottom: 12rpx;
}
.item-list-item-header{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.item-l-i-checkbox{
    width: 30rpx;
    height: 30rpx;
    margin-right: 36rpx;
    border-radius: 50%;
    border: 2rpx solid #FFA928;
    flex-shrink: 0;
}
.item-l-i-user{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}
.item-l-i-user-img{
    display: block;
    width: 80rpx;
    height: 80rpx;
    margin-right: 24rpx;
    border-radius: 50%;
    border: 1rpx solid #f8f8fa;
}
.item-l-i-user-name{
    font-size: 28rpx;
    font-weight: bold;
    color:#202128
}
.item-l-i-right{
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.item-l-i-time{
    display: block;
    font-size: 28rpx;
    font-weight: bold;
    color: #202128;
}
.item-l-i-time-money{
    display: block;
    font-size: 24rpx;
    color: #a0a1a9;
    text-align: right;
}
.item-l-i-right-icon{
    width: 40rpx;
    height: 40rpx;
    margin-left: 12rpx;
}
.item-list-item-content{
    margin-left: 70rpx;
    margin-top: 12rpx;
}
.item-l-i-c-item-text{
    font-size: 24rpx;
    color: #a0a1a9;
    margin-bottom: 4rpx;
    font-weight: 400;
}
.item-l-i-c-item-text-dk{
    display: flex;
    align-items: center;
    justify-content: flex-start;

}
.item-l-i-c-item-text{
    display: flex;
    align-items: center;
    justify-content: flex-start;

}
.checkbox-selected{
    background-color: #FFA928;
    border: 2rpx solid #FFA928;
}
.checkbox-selected::after{
    content: '';
    display: block;
    width: 15rpx;
    height: 15rpx;
    background-color: #fff;
    position: relative;
    top:8rpx;
    left: 8rpx;
    border-radius: 50%;
}


.bgCl0{
    background-color: #6a76fe;
}
.bgCl1{
    background-color: #fa8e9e;
}
.bgCl2{
    background-color: #7bebf9;
}
.bgCl3{
    background-color: #80c780;
}
.empty{
    display: flex;
    align-items: center;
    justify-content: center;
    height: calc(100vh - 116rpx);
    font-size: 28rpx;
    color: #999;
}
.item-l-i-user-first-name{
    display: block;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 50%;
    background-color: #e5d312;
    color: #fff;
    font-size: 38rpx;
    margin-right: 24rpx;
}